################# bar appearance                   

bar {
	status_command i3blocks -c $HOME/.config/i3blocks/i3blocks.conf
	separator_symbol "|"
	tray_output primary
	position top
	font pango:Inconsolata Nerd Font Bold 12
    height 25
    workspace_buttons yes

  colors {
    background $background
    statusline $color15
    separator  #16A085

    focused_workspace  #16A085 #16A085 $color15
    active_workspace   $background #16A085 $color15
    inactive_workspace $background $background $color1
    urgent_workspace   #16A085 #16A085 $color15
    binding_mode       #16A085 #16A085 $color15
  }
}

